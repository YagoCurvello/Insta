<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/branco"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleFotoUsuarioPostagem"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/padrao" />

            <TextView
                android:id="@+id/textUsuarioPostagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Nome Usuario" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imagePostagem"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="15dp"
            android:scaleType="center"
            app:srcCompat="@drawable/padrao" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.like.LikeButton
                android:id="@+id/likeButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:icon_size="30dp"
                app:icon_type="heart" />

            <ImageView
                android:id="@+id/imageIrComentarios"
                android:layout_width="33dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                app:srcCompat="@android:drawable/stat_notify_chat"
                app:tint="@color/cinza_escuro" />

        </LinearLayout>

        <TextView
            android:id="@+id/textCurtidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="X Curtidas"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textDescricaoPostagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            tools:text='"Descrição"' />

    </LinearLayout>

</LinearLayout>